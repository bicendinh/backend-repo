{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./", // Root directory is the project root
    "baseUrl": ".", // Set the base directory to the project root
    "paths": {
      "@config/*": ["config/*"],
      "@controller/*": ["controller/*"],
      "@core/*": ["core/*"],
      "@entities/*": ["entities/*"],
      "@middleware/*": ["middleware/*"],
      "@repository/*": ["repository/*"],
      "@routes/*": ["routes/*"]
    },
    "strict": true,
    "esModuleInterop": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
